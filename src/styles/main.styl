@import 'prism/themes/prism-okaidia.css'

@font-face {
  font-family:'Museo';
  font-style:normal;
  font-weight: 500;
  src:local('Museo'),
      local('Museo-Regular'),
      local('Museo500-Regular'),
      url("/fonts/Museo500-Regular-webfont.woff") format('woff');
}

@font-face {
  font-family:'Museo Sans';
  font-style:normal;
  font-weight: 500;
  src:local('Museo'),
      local('Museo-Sans'),
      local('Museo500-Sans'),
      url("/fonts/MuseoSans_500-webfont.woff") format('woff');
}

@media print {
  section, article {
    background-color: #fff !important;
  }
}

body {
  font-family: 'Museo', sans;
  background-color: #fafafa;
}

.bespoke-parent {
  -webkit-transform: translate3d(0, 0, 0);
}

.bespoke-slide {
  background-color: rgba(255, 255, 255, 0);
  padding: 20px;

  aside {
      display: none;
  }
}

.todo:before {
  content: "TODO: "
  color: #f00;
  font-style: italic;
  font-weight: bolder;
}

.title {
  text-align: left;
  font-weight: normal;
  font-family: 'Patua One', serif;
}

h2.full-slide {
  font-size: 90pt;
  font-weight: normal;
  line-height: 98%;
}

h2.fullish-slide {
  @extend h2.full-slide
  font-size: 73pt;
}

ul {
  margin: 10px 0;
  text-align: left;
}

address {
  margin-top: 20px;
  float: left;
  text-align: right;
  width: 100%;
  font-style: normal;
  line-height: 150%

  .bio {
    opacity: 0.7;
  }
  
  .author {
    font-size: 120%;
  }

  .author, a {
    font-weight: bolder;
  }

  a {
    color: inherit;
    &:hover {
      font-style: underline;
    }
  }

  .urls {
    padding-top: 26px;
  }

  ul {
    width: 100%;
    position: relative;

    list-style: none;

    li {
      float: left;
      text-align: center;
      width: 33.3%;

      &:first-child {
        text-align: left;
      }
      &:last-child {
        text-align: right;
      }
    }
  }
}

.logo-big {
  width: 60%;
}

pre {
  padding: 26px 20px !important;
  font-size: 16px;
}          

.sideBySide {
  flex-direction: row;
  width: 100%;

  pre {
    width: 48%;
    margin: 0.5em 0.4em;
    padding: 26px 10px;
    font-size: 52%;
    float: left;
    display: inline-block;
  }
}

.threeWay {
  @extend .sideBySide;
  text-align: center;

  > * {
    text-align: center;
    display: inline-block;
    width: 32%;
  }
}

.stack {
  &.corner {
    position: absolute;
    bottom: 15px;
    left: 25px;
    line-height: 94%;
  }

  font-size: 1.1em;
  font-weight: bolder;

  li {
    padding: 0;
    margin: 0;
  }

  .lowlight {
    opacity: 0.6;
  }
}

.highlight {
  font-weight: bolder;
  color: #c13038;
}

.topic-slide {
  background-color: #f3b840;
}

.solution-slide {
  background-color: #c13038;
}

*[data-bespoke-state='solution-slide'] {
  &, * {
    color: #fafafa;
  }
}

.in-place-transition {
  .bespoke-bullet-inactive {
    opacity: 0;
    display: none;
    li & {
      transform: translateX(0);
    }
  }

  .bespoke-bullet-active {
    opacity: 0;
    display: none;
  }

  .bespoke-bullet-current,
  // Keep the first bullet/last bullet visible, to make transitions smooth
  .bespoke-bullet-active:last-of-type,
  .bespoke-bullet-inactive:first-of-type {
    opacity: 1;
    display: inherit;
  }
}

.screenshot {
  width: 400px;
  border: solid 0.5px #aaa;
  border-radius: 3px;
}
